<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="ThemeBucket">
    <link rel="shortcut icon" href="~/Areas/Admin/assets/images/favicon.png">
    <title>BucketAdmin</title>
    <!--Core CSS -->
    <link href="~/Areas/Admin/assets/bs3/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/js/jquery-ui/jquery-ui-1.10.1.custom.min.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/css/bootstrap-reset.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/js/jvector-map/jquery-jvectormap-1.2.2.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/css/clndr.css" rel="stylesheet">
    <!--clock css-->
    <link href="~/Areas/Admin/assets/js/css3clock/css/style.css" rel="stylesheet">
    <!--Morris Chart CSS -->
    <link rel="stylesheet" href="~/Areas/Admin/assets/js/morris-chart/morris.css">
    <!-- Custom styles for this template -->
    <link href="~/Areas/Admin/assets/css/style.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/css/style-responsive.css" rel="stylesheet" />
    <!-- Just for debugging purposes. Don't actually copy this line! -->
    <!--[if lt IE 9]>
    <script src="~/Areas/Admin/assets/js/ie8-responsive-file-warning.js"></script><![endif]-->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body>
        <!--header start-->
        <header class="header fixed-top clearfix">
            <!--logo start-->
            <div class="brand">
                <a href="index.html" class="logo">
                    <img src="~/Areas/Admin/assets/images/logo.png" alt="">
                </a>
                <div class="sidebar-toggle-box">
                    <div class="fa fa-bars"></div>
                </div>
            </div>
            <!--logo end-->

            <div class="top-nav clearfix">
                <!--search & user info start-->
                <ul class="nav pull-right top-menu">
                    
                    <!-- user login dropdown start-->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <img alt="" src="~/Areas/Admin/assets/images/avatar1_small.jpg">
                            <span class="username">@User.Identity.Name</span>
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu extended logout">
                            <li><a href="~/Manage"><i class=" fa fa-suitcase"></i>Profile</a></li>
                            <li>
                                @using (Html.BeginForm("LogOff", "Account",new{Area=""} ,FormMethod.Post,new { id = "logoutForm", @class = "navbar-right" }))
                                {
                                @Html.AntiForgeryToken() ;
                                   <a href="javascript:document.getElementById('logoutForm').submit()">Oturumu kapat</a>
                                
                                }
                            </li>
                        </ul>
                    </li>
                    <!-- user login dropdown end -->

                </ul>
                <!--search & user info end-->
            </div>
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse">
                <!-- sidebar menu start-->
                <div class="leftside-navigation">
                    <ul class="sidebar-menu" id="nav-accordion">
                        <li>
                            <a class="active" href="/Admin/Yonetim">
                                <i class="fa fa-dashboard"></i>
                                <span>Anasayfa</span>
                            </a>
                        </li>
                        <li>
                            <a class="active" href="/Admin/RolYonetim">
                                <i class="fa fa-dashboard"></i>
                                <span>Rol Yönetimi</span>
                            </a>
                        </li>
                        <li>
                            <a class="active" href="/Admin/RolYonetim/RolEkle">
                                <i class="fa fa-dashboard"></i>
                                <span>Yeni Rol Ekle</span>
                            </a>
                        </li>
                        <li>
                            <a class="active" href="/Admin/RolYonetim/RolKullaniciEkle">
                                <i class="fa fa-dashboard"></i>
                                <span>Kullanıcıya Rol Ver</span>
                            </a>
                        </li>
                        <li>
                            <a class="active" href="/Admin/Slider">
                                <i class="fa fa-dashboard"></i>
                                <span>Slider Yönetimi</span>
                            </a>
                        </li>



                    </ul>
                </div>
                <!-- sidebar menu end-->
            </div>
        </aside>

            @RenderBody();
    <!-- Placed js at the end of the document so the pages load faster -->
    <!--Core js-->
    <script src="~/Areas/Admin/assets/js/jquery.js"></script>
    <script src="~/Areas/Admin/assets/js/jquery-ui/jquery-ui-1.10.1.custom.min.js"></script>
    <script src="~/Areas/Admin/assets/bs3/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Areas/Admin/assets/js/jquery.scrollTo.min.js"></script>
    <script src="~/Areas/Admin/assets/js/jQuery-slimScroll-1.3.0/jquery.slimscroll.js"></script>
    <script src="~/Areas/Admin/assets/js/jquery.nicescroll.js"></script>
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="~/Areas/Admin/assets/js/flot-chart/excanvas.min.js"></script><![endif]-->
    <script src="~/Areas/Admin/assets/js/skycons/skycons.js"></script>
    <script src="~/Areas/Admin/assets/js/jquery.scrollTo/jquery.scrollTo.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="~/Areas/Admin/assets/js/calendar/clndr.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js"></script>
    <script src="~/Areas/Admin/assets/js/calendar/moment-2.2.1.js"></script>
    <script src="~/Areas/Admin/assets/js/evnt.calendar.init.js"></script>
    <script src="~/Areas/Admin/assets/js/jvector-map/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/Areas/Admin/assets/js/jvector-map/jquery-jvectormap-us-lcc-en.js"></script>
    <script src="~/Areas/Admin/assets/js/gauge/gauge.js"></script>
    <!--clock init-->
    <script src="~/Areas/Admin/assets/js/css3clock/js/css3clock.js"></script>
    <!--Easy Pie Chart-->
    <script src="~/Areas/Admin/assets/js/easypiechart/jquery.easypiechart.js"></script>
    <!--Sparkline Chart-->
    <script src="~/Areas/Admin/assets/js/sparkline/jquery.sparkline.js"></script>
    <!--Morris Chart-->
    <script src="~/Areas/Admin/assets/js/morris-chart/morris.js"></script>
    <script src="~/Areas/Admin/assets/js/morris-chart/raphael-min.js"></script>
    <!--jQuery Flot Chart-->
    <script src="~/Areas/Admin/assets/js/flot-chart/jquery.flot.js"></script>
    <script src="~/Areas/Admin/assets/js/flot-chart/jquery.flot.tooltip.min.js"></script>
    <script src="~/Areas/Admin/assets/js/flot-chart/jquery.flot.resize.js"></script>
    <script src="~/Areas/Admin/assets/js/flot-chart/jquery.flot.pie.resize.js"></script>
    <script src="~/Areas/Admin/assets/js/flot-chart/jquery.flot.animator.min.js"></script>
    <script src="~/Areas/Admin/assets/js/flot-chart/jquery.flot.growraf.js"></script>
    <script src="~/Areas/Admin/assets/js/dashboard.js"></script>
    <script src="~/Areas/Admin/assets/js/jquery.customSelect.min.js"></script>
    <!--common script init for all pages-->
    <script src="~/Areas/Admin/assets/js/scripts.js"></script>
    <!--script for this page-->
</body>
</html>
