@model List<Slider>
@{
    Layout = null;
}

@foreach (var item in Model)
{
    <div class="single-slider slider-height-1 bg-img" style="background-image:url(@item.SliderResimYolu);">
        <div class="container">
            <div class="row">
                <div class="col-lg-9 col-md-7 col-12 col-sm-12">
                    <div class="slider-content slider-animated-1 pt-230">
                        <h1 class="animated">@item.SliderBaslik</h1>
                        <p class="animated">@item.SliderAciklama </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

